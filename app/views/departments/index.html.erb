<h1>Available Department Listings <%= link_to 'New Department', new_department_path,:style=>"font-size:14px;float:right;margin-top:9px;",:class=>"btn btn-info btn-cons" %>
</h1>
<hr>
<br>
<h3>Departments Under Laboratory</h3>
<table id="dept_list" class="table table-striped table-bordered">
 <thead> 
  <tr>
    <th>Name</th>
    <th>Dep type</th>
    <th>Department code</th>
    <th style="width: 25%;text-align:center">Action</th>
    
  </tr>
</thead>
<tbody>
<%if @department_labs.present?%>  
  <% @department_labs.each do |department| %>
    <tr>
      <td><%= department.name %></td>
      <td>Laboratory</td>
      <td><%= department.department_code %></td>
      
      <td style="text-align:center">  <a href="/test_titles?dep_id=<%=department.id%>"><span class="btn btn-success btn-lg" style="padding: 2px 3px;font-size: 13px;"><i class="glyphicon glyphicon-ok"></i> Test Title</span></a>   
        <a href="departments/<%=department.id%>/edit" >
        <button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit" ><span class="glyphicon glyphicon-pencil"></span></button></a>
        <%#= link_to 'Edit', edit_department_path(department) %> 
        <%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      
    </tr>
  <% end %>
<%else%>
 <tr>
  <td colspan="4" style="text-align:ce<a href="/test_titles/new?dep_id=<%=params[:id]%>">nter">No Departments Found!</td>
</tr>
<%end%>
</tbody>
</table>

